<v:WindowEx x:Class="SharpPad.Notepads.Views.NotepadWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:v="clr-namespace:SharpPad.Views"
            xmlns:wpf="clr-namespace:SharpPad.Shortcuts.WPF"
            xmlns:c="clr-namespace:SharpPad.AdvancedMenuService.Controls"
            xmlns:bh="clr-namespace:SharpPad.Behaviours" xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
            xmlns:controls="clr-namespace:SharpPad.Notepads.Controls"
            mc:Ignorable="d"
            Style="{StaticResource CustomWindowStyleEx}"
            Background="{DynamicResource PanelBackground0}"
            BorderBrush="{DynamicResource PanelBorderBrush}"
            TitlebarBrush="{DynamicResource ABrush.Tone7.Background.Static}"
            Height="600" Width="600"
            FontFamily="{StaticResource FontOxanium}" FontWeight="Medium"
            wpf:UIInputManager.FocusPath="Application/Notepad"
            WindowStartupLocation="CenterScreen">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <!-- 
            Context capturing menu is used to capture the context data of the 
            currently focused item before focus is switched to a menu item.
            This is used to implement a kind of "contextual" non-context menu item
        -->
        <c:ContextCapturingMenu Grid.Row="0" BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="0,0,0,1"
                                Background="{Binding TitlebarBrush, RelativeSource={RelativeSource AncestorType={x:Type v:WindowEx}, Mode=FindAncestor}}">
            <MenuItem Header="File">
                <c:AdvancedCommandMenuItem Header="New File" CommandId="NewFile"/>
                <c:AdvancedCommandMenuItem Header="Open File(s)..." CommandId="OpenFile"/>
                <c:AdvancedCommandMenuItem Header="Save File" CommandId="SaveDocumentFile"/>
                <c:AdvancedCommandMenuItem Header="Save File As..." CommandId="SaveDocumentFileAs"/>
                <c:AdvancedCommandMenuItem Header="Save All" CommandId="SaveAllDocumentFilesAs"/>
                <Separator/>
                <c:AdvancedCommandMenuItem Header="Close File" CommandId="CloseDocument"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <c:AdvancedCommandMenuItem Header="Undo" CommandId="UndoInEditor"/>
                <c:AdvancedCommandMenuItem Header="Redo" CommandId="RedoInEditor"/>
                <Separator/>
                <c:AdvancedCommandMenuItem Header="Cut" CommandId="CutInEditor"/>
                <c:AdvancedCommandMenuItem Header="Copy" CommandId="CopyInEditor"/>
                <c:AdvancedCommandMenuItem Header="Copy File Path" CommandId="CopyFilePathInEditor"/>
                <c:AdvancedCommandMenuItem Header="Paste" CommandId="PasteInEditor"/>
                <c:AdvancedCommandMenuItem Header="Delete" CommandId="DeleteTextOrLineInEditor"/>
                <c:AdvancedCommandMenuItem Header="Delete Line" CommandId="DeleteLineInEditor"/>
                <Separator/>
                <c:AdvancedCommandMenuItem Header="Select All" CommandId="SelectAllInEditor"/>
                <c:AdvancedCommandMenuItem Header="Select Line" CommandId="SelectLineInEditor"/>
                <Separator/>
                <c:AdvancedCommandMenuItem Header="Invert Case" CommandId="InvertCaseInEditor"/>
                <c:AdvancedCommandMenuItem Header="Indent Selection" CommandId="IndentSelectionInEditor"/>
                <c:AdvancedCommandMenuItem Header="Convert To Upper case" CommandId="ConvertToUppercaseInEditor"/>
                <c:AdvancedCommandMenuItem Header="Convert To Lower case" CommandId="ConvertToLowercaseInEditor"/>
                <c:AdvancedCommandMenuItem Header="Convert To Title Case" CommandId="ConvertToTitleCaseInEditor"/>
                <c:AdvancedCommandMenuItem Header="Convert Tabs To Spaces" CommandId="ConvertTabsToSpacesInEditor"/>
                <c:AdvancedCommandMenuItem Header="Convert Spaces To Tabs" CommandId="ConvertSpacesToTabsInEditor"/>
                <c:AdvancedCommandMenuItem Header="Convert Leading Tabs To Spaces" CommandId="ConvertLeadingTabsToSpacesInEditor"/>
                <c:AdvancedCommandMenuItem Header="Convert Leading Spaces To Tabs" CommandId="ConvertLeadingSpacesToTabsInEditor"/>
                <c:AdvancedCommandMenuItem Header="Remove Leading Whitespace" CommandId="RemoveLeadingWhitespaceInEditor"/>
                <c:AdvancedCommandMenuItem Header="Remove Trailing Whitespace" CommandId="RemoveTrailingWhitespaceInEditor"/>
            </MenuItem>
            <MenuItem Header="Theme">
                <MenuItem Header="Deep Dark" Click="SetThemeClick" Uid="0"/>
                <MenuItem Header="Soft Dark (default)" Click="SetThemeClick" Uid="1"/>
                <MenuItem Header="Dark Grey" Click="SetThemeClick" Uid="2"/>
                <MenuItem Header="Grey" Click="SetThemeClick" Uid="3"/>
                <MenuItem Header="Red and Black" Click="SetThemeClick" Uid="4">
                    <bh:BehaviourCollection.Behaviours>
                        <bh:BehaviourCollection>
                            <bh:TestRedBackgroundBehaviour1/>
                            <bh:TestBlueBackgroundBehaviour2/>
                        </bh:BehaviourCollection>
                    </bh:BehaviourCollection.Behaviours>
                </MenuItem>
                <MenuItem Header="Light Theme" Click="SetThemeClick" Uid="5"/>
                </MenuItem>
        </c:ContextCapturingMenu>
        <Border Grid.Row="1">
            <Grid Background="Transparent">
                <TextBlock Text="Press CTRL+N to create a new file, or drop files here" TextWrapping="Wrap"
                           Foreground="{DynamicResource ABrush.Foreground.Disabled}" FontSize="14"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <controls:NotepadEditorPanel x:Name="PART_NotepadPanel" Background="Transparent"
                                             VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>
        <Border Grid.Row="2" Background="{DynamicResource ABrush.Tone5.Background.Static}" 
                BorderThickness="0,1,0,0" BorderBrush="{DynamicResource PanelBorderBrush}" 
                Padding="3,0">
            <DockPanel>
                <DockPanel x:Name="PART_ActiveBackgroundTaskGrid" DockPanel.Dock="Right">
                    <Separator Style="{StaticResource VerticalSeparator}" Margin="5,0"/>
                    <TextBlock x:Name="PART_TaskCaption" Text="progname" DockPanel.Dock="Left" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <ProgressBar x:Name="PART_ActiveBgProgress" Width="150" DockPanel.Dock="Right"
                                 Height="9" BorderThickness="0"
                                 Background="{DynamicResource ABrush.Tone3.Background.Static}"
                                 Minimum="0" Maximum="1" Value="0"/>
                </DockPanel>
                <TextBlock x:Name="ActivityTextBlock"
                           Padding="4,0" VerticalAlignment="Center" FontFamily="Segoe UI" 
                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                           ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Text}"/>
            </DockPanel>
        </Border>
    </Grid>
</v:WindowEx>